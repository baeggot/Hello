<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.baeflower.hello.multimedia.audio.SolMusicSongListActivity"
              android:orientation="vertical">

    <ListView
        android:id="@+id/lv_sol_musicPlayer_music_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></ListView>


    <LinearLayout
        android:id="@+id/ll_mini_music_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="#ff232225"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_album_in_list"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/giraffe_1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mini_music_player_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                android:textColor="#FFffffff"/>

            <SeekBar
                android:id="@+id/sb_mini_music_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mini_music_player_init_time_left"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:textColor="#FFffffff"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/tv_mini_music_player_init_time_right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingRight="5dp"
                    android:textColor="#FFffffff"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_previous_song_in_list"
                    android:text="이전곡"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_play_song_in_list"
                    android:text="중지"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

                <Button
                    android:id="@+id/btn_next_song_in_list"
                    android:text="다음곡"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
