<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.baeflower.hello.activity.EditTextActivity"
    android:orientation="vertical">


    <EditText
        android:editable="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true" />
    <!-- android:singleLine="true" : 한줄만 입력(앞에 있는게 잘리네) -->
    <!-- android:editable="false" : 처음에 edit가 안됨. EditText인데, 편집을 못하게 하고 싶을 때 -->


    <!-- android:ellipsize="end" : end면 뒤에 ... , 근데 TextView에서 쓰이는거네 -->

    <EditText
        android:hint="자동링크"
        android:autoLink="all"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:text="http://www.daum.net"
        android:autoLink="all"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- android:autoLink="all" : 안되네.. 텍스트뷰에서 하면 된다 -->
    <!-- F4를 눌러보면, EditText는 TextView를 상속받음 -->
    <!-- EditText에서는 안되는 거는 TextView 에서만 된다는 것 -->



    <EditText
        android:hint="여기에 입력하세요"
        android:id="@+id/input_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <EditText
        android:hint="출력되는 곳"
        android:id="@+id/output_edit_text"
        android:editable="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true" />



</LinearLayout>
