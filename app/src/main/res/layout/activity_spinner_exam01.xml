<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.baeflower.hello.spinner.SpinnerExam01Activity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_in_spinnerExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffFFFF00"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:popupBackground="#ffff5856">
        <!-- spinnerMode : dialog, 기본이 dropdown -->
        <!-- popupBackground는 spinnerMode가 dropdown일 때만 된다 -->

    </Spinner>


</LinearLayout>
