<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#FF4081</item>
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorControlHighlight">#00CC55</item>
        <item name="colorControlNormal">#FF0000</item>
    </style>

    <style name="SolAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/default_bg</item>
        <item name="android:background">@color/default_bg</item>

        <!-- 앱 전체에 적용하기 위해서는 theme에 추가해야함 -->
        <item name="android:buttonStyle">@style/SolAppTheme.Widget.Button</item>

    </style>

    <!-- SolAppTheme Button Style -->
    <style name="SolAppTheme.Widget.Button" parent="android:Widget.Button">
        <!-- button background, touch feed back -->
        <item name="android:background">@drawable/button_default</item>

        <!-- button minimum size -->
        <item name="android:minWidth">96dp</item>
        <item name="android:minHeight">48dp</item>

        <!-- button text style -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
